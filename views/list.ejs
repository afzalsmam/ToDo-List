<%- include("header") -%>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% for(var i=0; i<newListItems.length; i++){ %>
          <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %></p>
            <form action="/del" method="post">
             <!-- <button class="remove-item" type="submit" name="submit">X</button> -->
             <button class="remove-item" type="submit" name="remove" value="<%=i%>"><i class="far fa-trash-alt"></i></button>
           </form>
          </div>

        <% } %>

            <form class="item" action="/" method="post">
              <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
          <button type="submit" name="button" value="<%= listTitle %>">+</button>
        </form>
    </div>

    <%- include("footer") -%>
